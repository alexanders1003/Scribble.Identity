@using Scribble.Identity.Web.Infrastructure.Helpers

@{
    ViewData["Title"] = "Reset password";
    Layout = "_Layout";
}

<div class="form-container">
    @Html.Logo()
    @Html.Title("Account recovery", "Password was successfully changed. Now you can sign in")
    <div class="image">
        <i class="fa fa-check" aria-hidden="true"></i>
    </div>
    <section id="sign-in-form">
        <form method="get" asp-action="SignIn" asp-controller="Account" asp-route-returnUrl="@ViewData["ReturnUrl"]">
            <button class="main-button" type="submit">Sign in</button>
        </form>
    </section>
</div>