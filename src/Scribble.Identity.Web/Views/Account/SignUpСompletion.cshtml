@using Scribble.Identity.Web.Infrastructure.Helpers
@{
    ViewData["Title"] = "Sign up";
    Layout = "_Layout";
}

@using (Html.BeginForm("SignIn", "Account", new { returnUrl = ViewData["ReturnUrl"] }, FormMethod.Get))
{
    @Html.Logo()
    @Html.Title("Sign up", "You should confirm your email")

    <div class="image">
        <i class="fa fa-envelope" aria-hidden="true" ></i>
    </div>

    <h4>You've been emailed a confirmation link. Check your email</h4>

    <button type="submit">Sign in</button>
}
