@using Scribble.Identity.Web.Infrastructure.Helpers
@model ForgotPasswordViewModel

@{
    ViewData["Title"] = "Forgot Password";
    Layout = "_Layout";
}

<div class="form-container">
    @Html.Logo()
    @Html.Title("Account recovery", "To help keep your account safe, Scribble wants to make sure it’s really you trying to sign in")
    <section id="forgot-password-form">
        <form method="post" autocomplete="off" asp-action="ForgotPassword" asp-controller="Account" asp-route-returnUrl="@ViewData["ReturnUrl"]">
            <div class="form-group">
                <label asp-for="Email">Username</label>
                <input asp-for="Email" type="email" placeholder="Email or Phone">
            </div>
            <button class="main-button" type="submit">Continue</button>
        </form>
    </section>
</div>


